doctype html
html
  head
    meta(charset='UTF-8')

    - var cdn = '//cdnjs.cloudflare.com/ajax/libs'
    link(rel='stylesheet'
      href=cdn + '/font-awesome/4.3.0/css/font-awesome.min.css')

    link(rel='stylesheet'
      href=cdn + '/codemirror/4.11.0/codemirror.min.css')

    link(rel='stylesheet'
      href=cdn + '/slick-carousel/1.3.15/slick.css')

    link(href='//fonts.googleapis.com/css?family=Roboto+Slab|Open+Sans'
      rel='stylesheet' type='text/css')

    - cdn = '//cdn.jsdelivr.net'
    //link(rel='stylesheet' href=cdn + '/editor/0.1.0/editor.css')

    link(rel='stylesheet' href='/css/style.css')

  body
    #page
      include ./header.jade
      #content(v-component="{{currentPage}}-page"
        v-class="{{currentPage}}-page" v-with="user:user")
      .clear
      include ./footer.jade

    #top
      a(v-on="click:top" title="Back to top"): .fa.fa-arrow-circle-up

    #templates
      include ../../build/templates.jade

    - var cdn = '//cdnjs.cloudflare.com/ajax/libs'
    script(src=cdn + '/jquery/2.1.3/jquery.js')
    script(src=cdn + '/jquery-cookie/1.4.1/jquery.cookie.js')
    script(src=cdn + '/marked/0.3.2/marked.min.js')
    script(src=cdn + '/moment.js/2.9.0/moment.min.js')
    script(src=cdn + '/vue/0.11.5/vue.js')
    script(src=cdn + '/codemirror/4.11.0/codemirror.js')
    script(src=cdn + '/codemirror/4.11.0/addon/mode/overlay.min.js')
    script(src=cdn + '/codemirror/4.11.0/addon/display/placeholder.min.js')
    script(src=cdn + '/codemirror/4.11.0/mode/markdown/markdown.min.js')
    script(src=cdn + '/codemirror/4.11.0/mode/gfm/gfm.min.js')
    script(src=cdn + '/slick-carousel/1.3.15/slick.min.js')

    script(src='/js/modernizr.custom.js')
    script(src='/js/plupload.full.min.js')

    script(src='/js/assets.js')
