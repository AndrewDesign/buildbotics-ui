script#profile-followers-template(type="text/x-template")
  h1 People following {{profile.name}}
  bb-profiles(profiles="{{followers}}")
  .weak(v-show="!followers.length")
    | ({{profile.name}} does not yet have any followers.)

  h1 People {{profile.name}} is following
  bb-profiles(profiles="{{following}}")
  .weak(v-show="!following.length")
    | ({{profile.name}} is not yet following anyone.)
