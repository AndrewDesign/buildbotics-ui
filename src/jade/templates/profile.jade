script#profile-template(type="text/x-template")
  .profile
    .header
      .header-content
        .widgets
          //bb-points(v-with="profile")
          //bb-followers(v-with="profile")

        .path
          .fa.fa-users(title="Profiles")
          a(href="/{{profile.name}}#creations") {{profile.name}}

    .page-content
      button.success(v-show="isOwner() && !editing" v-on="click:edit()")
        | Edit Profile
      button.success(v-show="editing" v-on="click:save()") Save
      button(v-show="editing" v-on="click:cancel()") Cancel Edit

      .menu
        a(v-repeat="subsection:subsections" v-attr="href:'#' + subsection")
          | {{subsection}}

      .section(v-component="profile-{{subsection}}")
