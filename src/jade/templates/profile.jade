script#profile-template(type="text/x-template")
  .profile
    .header
      h3.username {{profile.name}}
    hr

    .content
      img.picture(v-attr='src:profile.avatar')

      bb-text-area-editor(v-model='profile.bio' on-save="save('bio', value)"
        can-edit='is_owner()' display-name='bio')
      hr

      h3 Things
      bb-things(v-with='things:things')
      hr

      h3 Starred Things
      bb-things(v-with='starred:starred')
      hr

      h3 Badges
      hr

    .sidebar
      h3 Info
      .joined
        | Joined {{profile.joined | TimeSince}}.
      .lastseen
        | Last seen {{profile.lastseen | TimeSince}}.
      hr

      bb-text-field-editor.fullname(v-model='profile.fullname'
        on-save="save('fullname', value)" can-edit='is_owner()'
        display-name='full name')
      hr

      bb-text-field-editor.location(v-model='profile.location'
        on-save="save('location', value)" can-edit='is_owner()'
        display-name='location')
      hr

      bb-text-field-editor.url(v-model='profile.url'
        on-save="save('url', value)" can-edit='is_owner()'
        display-name='homepage')
        a(v-attr='href:field' target='_blank') {{field}}
      hr

      h3 Followers
      hr

      h3 Following
      hr
