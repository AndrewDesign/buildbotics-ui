script#things-template(type="text/x-template")
  ul.things
    li.thing-preview(v-repeat='thing:things')
      a(href='/{{thing.owner}}/{{thing.thing}}')
        .title {{thing.title || thing.thing}}

        img.image(v-if='thing.image' v-attr='src:thing.image')
        .image.missing(v-if='!thing.image')
          .fa.fa-image

      .info
        a.owner(href='/{{thing.owner}}',
          title="View {{thing.owner}}'s profile")
          | by <span>{{thing.owner}}</span>

        bb-stars(v-model='thing.stars' starred='' on-toggle='toggleStar()')

        a.comments(href='{{thing.owner}}/{{thing.thing}}#comments',
          title='View comments')
          span.fa.fa-comments
          | &nbsp;{{thing.comments}}
