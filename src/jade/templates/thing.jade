script#thing-template(type="text/x-template")
  .thing
    .header
      .header-content
        .widgets
          bb-stars(thing="{{thing}}")
          //bb-children(v-with="thing")

        .path
          .fa.fa-cubes(title="Creations")
          | <a href="/{{thing.owner}}#creations">{{thing.owner}}</a> /
          | <a href="/{{thing.owner}}/{{thing.name}}">{{thing.name}}</a>

    .page-content
      button.success(v-show="isOwner() && !editing" v-on="click:edit()") Edit
      button.success(v-show="editing" v-on="click:save()") Save
      button(v-show="editing" v-on="click:cancel()") Cancel Edit
      button(v-show="isOwner() && !editing && !thing.published"
        v-on="click:publish()") Publish

      .menu
        a(v-repeat="subsection:subsections" v-attr="href:'#' + subsection")
          | {{subsection}}

      .section(v-component="thing-{{subsection}}")
