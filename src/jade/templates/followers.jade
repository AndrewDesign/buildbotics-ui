script#followers-template(type="text/x-template")
  .followers
    button(v-if="button" v-on="click:toggle" v-class="success:!active"
      title="{{active ? 'Unf' : 'F'}}ollow {{profile.name}}")
      .fa.fa-users
      | {{active ? 'Unf' : 'F'}}ollow

    a(v-if="!button" v-on="click:toggle"
      title="{{active ? 'Unf' : 'F'}}ollow {{profile.name}}")
      | {{profile.followers | humanNumber}}
      .fa.fa-users(v-class="active:active")

    bb-modal(ref="login" buttons="{{buttons}}" callout="top-right")
      .modal-content You must login to follow someone.
